import pandas as pd
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression

data = pd.read_csv("sleep coffee.csv")
x = data[["cups_of_coffee"]]
y = data[["alertness_score"]]

plt.scatter(x, y, color='brown')
plt.xlabel("Cups of Coffee")
plt.ylabel("Alertness Score")
plt.title("Coffee vs Alertness")
plt.show()

model = LinearRegression()
model.fit(x, y)

print("Predicted alertness for 3.5 cups:", model.predict([[3.5]])[0][0])
